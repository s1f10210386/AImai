datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id
  userId    String
  label     String
  done      Boolean
  createdAt DateTime
}

model User {
  id    String   @id @default(uuid())
  email String
  rooms Room[]
  messages Message[]
}


model Room {
  id      String    @id @default(uuid())
  name    String
  date    DateTime  @unique
  isOpen  Boolean   @default(true)
  userId String
  messages Message[]
  user    User      @relation(fields: [userId], references: [id])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  userId    String
  roomId    String
  timestamp DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  room      Room     @relation(fields: [roomId], references: [id])
}